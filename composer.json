{
    "name": "kraenzle-ritter/markdown-to-tei",
    "description": "Flexible Markdown to TEI XML converter with customizable conventions",
    "type": "library",
    "keywords": ["markdown", "tei", "xml", "converter", "digital-humanities"],
    "license": "MIT",
    "authors": [
        {
            "name": "Andreas Kraenzle<kraenzle@k-r.ch>"
        }
    ],
    "require": {
        "php": ">=8.1",
        "league/commonmark": "^2.4",
        "symfony/dom-crawler": "^6.3",
        "symfony/css-selector": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "MarkdownToTei\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MarkdownToTei\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs src/ tests/",
        "cbf": "phpcbf src/ tests/"
    },
    "config": {
        "sort-packages": true
    }
}
